doctype html
html
  head
    meta(charset='utf-8')
    title Resultado
    //- link(rel="stylesheet", type="text/css", href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/styles/github.min.css")
    link(rel="stylesheet", type="text/css", href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/styles/googlecode.min.css")
    //- link(rel="stylesheet", type="text/css", href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/styles/monokai_sublime.min.css")
    script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/highlight.min.js")
    script(type="text/javascript", src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.2/languages/javascript.min.js")
    script.
      hljs.initHighlightingOnLoad();
  body
    h1 Resultados de #{nome}
    - var tt = questionario.length
    - var cc = 0
    each item in questionario
      - var isOk = (item.resposta === item.correta)
      - if (isOk)
        - cc = cc + 1
      pre
        code.javascript #{item.pergunta}
      p(style='padding:5px;color:white;background-color:' + (isOk ? 'green' : 'red')) #{item.resposta}

    h2 Acertou #{cc} de #{tt}
